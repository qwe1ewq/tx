void drawSnezhinka(){
	txSetColor(RGB(245,156,109), 1);
    txLine (40, 300, 100, 300);
    txLine (45, 305, 105, 305);
    txLine (40, 300, 45, 305);
    txLine (100, 300, 105, 305);
    txLine (60, 300, 65, 305);
    txLine (80, 300, 85, 305);
    txLine (115, 290, 105, 305);
    txLine (110, 285, 100, 300);
    txLine (110, 285, 115, 290);
    txSetColor(RGB(245,156,109), 3);
    txLine (50, 305, 50, 320);
    txLine (80, 305, 80, 320);
    txLine (40, 320, 100, 320);
    txLine (45, 305, 45, 315);
    txLine (75, 305, 75, 315);
    txLine (35, 315, 95, 315);
    }
